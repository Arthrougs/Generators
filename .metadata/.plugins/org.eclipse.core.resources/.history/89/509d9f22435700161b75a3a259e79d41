package org.lightningarc.www;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class SqlHandler {

	private String db;
	private String usr;
	private String pass;

	public SqlHandler(String database, String username, String password){
		this.db = database;
		this.usr = username;
		this.pass = password;
	}
	
	public void makeConnetion(){
		  try
		    {
		      this.conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/lightninglog", "ehrem", "flashy!");
		    }
		    catch (SQLException e)
		    {
		    }
	}
	
}
